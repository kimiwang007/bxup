<?xml version="1.0" encoding="UTF-8"?>    
 <!DOCTYPE sqlMap    
 PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"    
 "http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap namespace="FirstSpace">
	<typeAlias alias="EventInsertForm" type="com.wang.form.EventInsertForm" />
	<!-- select -->
	<select id="selectAllEvent" resultClass="EventInsertForm">    
             select * from 
             t_event where del_fg=0
	</select>
	<select id="selectEventById" resultClass="EventInsertForm">    
             select * from 
             t_event where id=#id#
	</select>
	
	<!-- insert -->
	<insert id="insertEventInsertForm1" parameterClass="EventInsertForm">
		insert into
		t_event(event_name,event_desc,event_place,img_type,iphone4_img,iphone5_img,iphone6_img,iphone6p_img,android_img1,
		android_img2,android_img3,event_start_date,event_end_date,event_time,event_link,create_date,create_id,del_fg)
		values(#eventName#,#eventDesc#,#eventPlace#,#imgtype#,#iPhone4IMGName#,#iPhone5IMGName#,#iPhone6IMGName#,#iPhone6PIMGName#,
		#androidIMGName1#,#androidIMGName2#,#androidIMGName3#,#eventStartDate#,#eventEndDate#,#eventTime#,#eventLink#,#createDate#,#createID#,#del_fg#)
	</insert>
	<insert id="insertEventInsertForm2" parameterClass="EventInsertForm">
		insert into
		t_icon_img(event_def_name,fri_def_name,pk_def_name,metal_def_name,start_date,end_date,create_date,create_id)
		values(#eventDef#,#friendDef#,#pKDef#,#metalDef#,#startDate#,#endDate#,#createDate#,#createID#)
	</insert>
	<!-- update -->
	<update id="deleteEventById" parameterClass="EventInsertForm">          
			update t_event  
			SET del_fg=1
			WHERE id=#id# 
	</update>
	<update id="updateEventById" parameterClass="EventInsertForm">          
			update t_event  
			SET event_name=#event_name#,event_start_date=#event_start_date#,event_end_date=#event_end_date#,
			event_time=#event_time#,event_link=#event_link#,event_desc=#event_desc#,event_place=#event_place#
			WHERE id=#id# 
	</update>
	<update id="updateimg4" parameterClass="EventInsertForm"> 
			update t_event 
			SET iphone4_img=#iPhone4IMGName#
			WHERE id=#id# 
	</update>
	<update id="updateimg5" parameterClass="EventInsertForm"> 
			update t_event 
			SET iphone5_img=#iPhone5IMGName#
			WHERE id=#id# 
	</update>
	<update id="updateimg6" parameterClass="EventInsertForm"> 
			update t_event 
			SET iphone6_img=#iPhone6IMGName#
			WHERE id=#id# 
	</update>
	<update id="updateimg6p" parameterClass="EventInsertForm"> 
			update t_event 
			SET iphone6p_img=#iPhone6PIMGName#
			WHERE id=#id# 
	</update>
	
	<!-- delete -->

</sqlMap> 
